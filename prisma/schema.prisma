// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model review {
  productId String   @id @default(cuid())
  username  String
  text      String
  rating    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  Tour   Tour   @relation(fields: [tourId], references: [id])
  tourId String

  userId String
  User   User   @relation(fields: [userId], references: [id])
}

model Tour {
  id           String     @id @default(cuid())
  title        String
  city         String
  image        String
  adress       String
  price        Float
  distance     Float
  rating       Float
  maxGroupSize Int
  featured     Boolean
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  reviews      review[]
  UserTour     UserTour[]
}

model UserTour {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Tour      Tour     @relation(fields: [tourId], references: [id])
  tourId    String
  User      User     @relation(fields: [userId], references: [id])
  userId    String
  datetime  DateTime @default(now())

  @@unique([tourId, userId])
}

model User {
  id        String     @id @default(cuid())
  username  String
  email     String     @unique
  role      String     @default("user")
  password  String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  UserTour  UserTour[]
  review    review[]
}
